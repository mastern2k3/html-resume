extends layout.pug

block content
    each project in projects
        section.blocks
            .date
                span= project.to
                span= project.from
            .decorator
            .details
                header
                    h3= project.title
                    span.place= project.company
                    span.location= project.place
                div
                    ul
                        each item in project.desc
                            li= item
                .tags
                    ul
                        each item in project.tags
                            li= item
