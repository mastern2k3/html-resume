extends layout.pug

block content
    each section in sections
        section.main-block
            h2
                i(class= 'fa ' + section.icon)
                = section.name
            each item in section.items
                section.blocks
                    .date
                        if item.dates
                            each date in item.dates
                                span= date
                    .decorator
                    .details
                        header
                            h3= item.title
                            if item.company
                                span.place= item.company
                            if item.place
                                span.location= item.place
                        if item.desc
                            div
                                ul
                                    each ditem in item.desc
                                        li= ditem
                        if item.tags
                            .tags
                                ul
                                    each titem in item.tags
                                        li= titem
